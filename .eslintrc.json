{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
		"max-lines-per-function": ["error", { "max": 50, "skipBlankLines": true, "skipComments": true, "IIFEs": true }],
		"init-declarations": ["error", "always"],
		"no-console":"warn",
		"no-plusplus": "off",
		"padded-blocks": "off",
		"quotes": ["error", "double", { "allowTemplateLiterals": true }],
		"semi": ["error", "always"]
    }
}
